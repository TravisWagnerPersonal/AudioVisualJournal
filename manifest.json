  "shortcuts": [
    {
      "name": "New Entry",
      "short_name": "New Entry", 
      "description": "Create a new journal entry",
      "url": "/?action=new-entry",
      "icons": [
        {
          "src": "icons/icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Voice Note",
      "short_name": "Voice Note",
      "description": "Quick voice recording", 
      "url": "/?action=voice-note",
      "icons": [
        {
          "src": "icons/icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Photo Journal",
      "short_name": "Photo Journal",
      "description": "Add photo with journal entry",
      "url": "/?action=photo-journal", 
      "icons": [
        {
          "src": "icons/icon-192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "photos",
          "accept": ["image/*", ".heic", ".heif"]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+journal",
      "url": "/?protocol=%s"
    }
  ],
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/plain": [".txt"],
        "application/json": [".json"],
        "image/*": [".jpg", ".jpeg", ".png", ".webp", ".heic", ".heif"],
        "audio/*": [".mp3", ".wav", ".m4a", ".aac"]
      }
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 375
  },
  
  "handle_links": "preferred",
  
  "display_override": [
    "standalone",
    "minimal-ui"
  ],
  
  "id": "audio-photo-journal",
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7"
