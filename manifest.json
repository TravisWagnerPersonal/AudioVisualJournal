  "screenshots": [
    {
      "src": "screenshots/mobile-1.png",
      "type": "image/png",
      "sizes": "540x720",
      "form_factor": "narrow",
      "label": "Journal Timeline View"
    },
    {
      "src": "screenshots/mobile-2.png",
      "type": "image/png",
      "sizes": "540x720",
      "form_factor": "narrow",
      "label": "Create New Entry"
    },
    {
      "src": "screenshots/mobile-3.png",
      "type": "image/png",
      "sizes": "540x720",
      "form_factor": "narrow",
      "label": "Audio Recording Interface"
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "shortcuts": [
    {
      "name": "New Entry",
      "short_name": "New Entry",
      "description": "Create a new journal entry",
      "url": "/?action=new-entry",
      "icons": [
        {
          "src": "icons/shortcut-new.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Voice Note",
      "short_name": "Voice Note",
      "description": "Quick voice recording",
      "url": "/?action=voice-note",
      "icons": [
        {
          "src": "icons/shortcut-voice.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "photos",
          "accept": ["image/*"]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+journal",
      "url": "/?protocol=%s"
    }
  ],
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/plain": [".txt"],
        "application/json": [".json"],
        "image/*": [".jpg", ".jpeg", ".png", ".webp", ".heic"]
      }
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 480
  },
  
  "handle_links": "preferred"
} 