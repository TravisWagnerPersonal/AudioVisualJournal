{
  "name": "Audio-Photo Journal",
  "short_name": "Audio Journal",
  "description": "Capture your thoughts, moments, and memories with audio recordings, photos, and text in a beautiful journaling app.",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#667eea",
  "background_color": "#f2f2f7",
  "scope": "/",
  
